    <%= form.password_field :password_confirmation, id: :user_password_confirmation %>
  </div>

  <div class="field">
    <%= form.label :email %>
    <%= form.text_field :email, id: :user_email %>
  </div>

  <div class="field">
    <%= form.label :company %>
    <%= form.text_field :company, id: :user_company %>
  </div>

  <div class="field">
    <%= form.label :division %>
    <%= form.text_field :division, id: :user_division %>
  </div>

  <div class="field">
    <%= form.label :contact_no %>
    <%= form.text_field :contact_no, id: :user_contact_no %>
  </div>

  <div class="field">
    <%= form.label :auth_token %>
    <%= form.text_field :auth_token, id: :user_auth_token %>
