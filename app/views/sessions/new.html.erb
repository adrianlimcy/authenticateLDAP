<div class="jumbotron">
  <% if flash[:alert] %>
  <p id="notice"><%= flash[:alert] %></p>
  <% end %>

  <%= form_tag do %>
  <fieldset>
    <legend>Please Log In</legend>
    <div class="field form-group">
      <%= label_tag :username, 'Username', class: "form-control-label" %>
      <%= text_field_tag :username, params[:username], class: "form-control" %>
    </div>
    <div class="field form-group">
      <%= label_tag :password, 'Password', class: "form-control-label" %>
      <%= password_field_tag :password, params[:password], class: "form-control" %>
    </div>
    <div class="field form-group">
      <%= submit_tag "Login", class: "btn btn-success" %>
    </div>
  </fieldset>
  <% end %>
  <!-- <p><%#= link_to "Forgot password?", new_password_reset_path %></p> -->
</div>
